<h2>Lista de Postagens</h2>
<hr>
<a href="/admin/postagens/add"><button class="btn btn-success">Nova Postagens</button></a>

{{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Conteúdo: {{conteudo}}</small> <br>
            <small>Data: {{data}}</small> <br>
            <small>Categoria: {{categoria.nome}}</small>
            <a href="/admin/postagens/edit/{{_id}}"><br><button class="btn btn-success mt-3">Editar postagem</button></a>
            <a href="/admin/postagens/deletar/{{_id}}"><br><button class="btn btn-danger mt-3">Deletar postagem</button></a>
        </div>

    </div>
{{else}}
    <p>Nenhuma postagem registrada!</p>
{{/each}}