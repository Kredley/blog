   <h1>{{categoria.nome}}</h1>
   
   {{#each postagens}}
    <div class="card mt-4">
        <div class="card-body">
            <h3>{{titulo}}</h3>
            <p>{{descricao}}</p>
            <a href="/postagem/{{slug}}" class="btn btn-success">Leia mais</a> 
            <hr>
            <small>Data de publicação {{#formatDate postagem.data}}{{/formatDate}}</small>
            
        </div>
    </div>
    {{else}}
        <p>Nenhuma postagem registrada!</p>
    {{/each}}